<script>
	// タブ切り替え
	document.addEventListener('DOMContentLoaded', function() {
		const tabs = document.querySelectorAll('.partner-tab');
		const contents = document.querySelectorAll('.partner-content');

		tabs.forEach(tab => {
			tab.addEventListener('click', function(this: HTMLElement) {
				const target = this.getAttribute('data-target');

				// タブのスタイル更新
				tabs.forEach(t => {
					t.classList.remove('active', 'bg-white', 'shadow-lg', 'text-gray-800');
					t.classList.add('text-gray-600', 'hover:text-gray-800');
				});
				this.classList.add('active', 'bg-white', 'shadow-lg', 'text-gray-800');
				this.classList.remove('text-gray-600', 'hover:text-gray-800');

				// コンテンツの表示切り替え
				contents.forEach(content => {
					if (content.id === `${target}-content`) {
						content.classList.remove('hidden');
						(content as HTMLElement).style.opacity = '0';
						setTimeout(() => {
							(content as HTMLElement).style.opacity = '1';
						}, 10);
					} else {
						content.classList.add('hidden');
					}
				});
			});
		});
	});
</script>

